  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"
></script>
</head>

<body>
   <div class="maincontainer">
       <div class="root">
           <div class="head">
               Flight Enquiry System
            </div>
            
            <div class="row" style="margin-top: 15px;">
             <div class="col-12"> 
            <div class="form-outline">
              <input type="text" name="flightid" class="form-control form-control-lg" />
              <label class="form-label">Flight Id</label>
            </div>
          </div>
        </div>

        <div class="row" style="margin-top: 15px;">
          <div class="col-12">  
         <div class="form-outline">
           <input type="text" name="companyname" class="form-control form-control-lg" />
           <label class="form-label">Company Name</label>
         </div>
       </div>
     </div>

     <div class="row" style="margin-top: 15px;">
      <div class="col-6"> 
     <div class="form-outline">
       <input type="text" name="sourcestate" class="form-control form-control-lg" />
       <label class="form-label">Source State</label>
     </div>

   </div>
   <div class="col-6"> 
    <div class="form-outline">
      <input type="text" name="sourcename" class="form-control form-control-lg" />
      <label class="form-label">Source Name</label>
    </div>
  </div>
 </div>

 <div class="row" style="margin-top: 15px;">
  <div class="col-6"> 
 <div class="form-outline">
   <input type="text" name="destinationstate" class="form-control form-control-lg" />
   <label class="form-label">Destination State</label>
 </div>

</div>
<div class="col-6"> 
<div class="form-outline">
  <input type="text" name="destinationcity" class="form-control form-control-lg" />
  <label class="form-label">Destination City</label>
</div>
</div>
</div>

<div class="row" style="margin-top: 15px;">
  <div class="col-6"> 
 <div class="form-outline">
  <input type="text" name="status" class="form-control form-control-lg" />
  <label class="form-label">Flight Status</label>
  </div>
 </div>

 <div class="col-6">
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox"  value="Economy" name="fclass" />
    <label class="form-check-label" for="inlineCheckbox1">Economy</label>
  </div>
  
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" name="fclass" value="Business" />
    <label class="form-check-label" for="inlineCheckbox2">Business</label>
  </div>
  </div>

</div>


        </div>
    </div> 
        


