    height: 400px;
    background-color: #dff9fb;
    border-radius: 20px;
    padding: 10px;
}
.head{
    color: #4834d4;
    font-size: 28px;
    font-weight: bold;
    font-family: Oxygen;
    display: flex;
    justify-content: center;
    padding: 5px;
}

