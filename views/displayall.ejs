<style>
  body {
    background: #30336b;

  }

  .maincontainer {
    display: flex;
    justify-content: center;
    padding: 20px;

  }

  .root {
    width: 1300px;
    height: auto;
    background: #FFF;
    padding: 10px;

  }

  .heading {
    color: #4834d4;
    font-size: 32px;
    font-weight: bold;
    font-family: Oxygen;
    display: flex;
    justify-content: center;
    padding: 5px;
  }

  .rowgap {
    margin-top: 40px;
  }
</style>


<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>

<body>
  <div class="maincontainer">
    <div class="root">
      <div class="heading">
        <span><img src="/images/logo.png" width="50"></span>DisplayAll Enquiry
      </div>
      <hr>

      <table class="striped">
        <thead>
          <tr>
            <th>Flight Id</th>
            <th>Company Name</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Type</th>
            <th>Class</th>
            <th>Days</th>
            <th>Update</th>
          </tr>
        </thead>

        <tbody>
          <% data.map((item)=>{ %>
            <tr>
              <td>
                <%=item.flightid %>
              </td>
              <th>
                <%=item.companyname %><br>
                  <a
                    href="/flight/showpicture?flightid=<%=item.flightid %>&companyname=<%=item.companyname %>&logo=<%=item.logo %>">
                    <img src="/images/<%=item.logo %>" width="40">
                  </a>
              </th>
              <td>
                <%=item.sc %><br>
                  <%=item.sourcetiming %>
              </td>
              <td>
                <%=item.dc %><br>
                  <%=item.destinationtiming %>
              </td>
              <td>
                <%=item.status %>
              <td>
                <%=item.flightclass.replaceAll('#',',') %>
              <td>
                <%=item.days.replaceAll('#',',') %>
              <td><a href="/flight/displaybyid?fid=<%=item.flightid %>">Update</a></td>
            </tr>
            <% }) %>

        </tbody>
      </table>

    </div>
  </div>
</body>

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>